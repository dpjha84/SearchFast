<Window x:Class="SearchFast.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchFast"
        mc:Ignorable="d"
        Title="SearchFast" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="LightGray">
    <Grid>
        <StackPanel>
            <Label Content="Example:"></Label>
            <StackPanel Orientation="Horizontal">
                <Label Content="*.txt" Width="80"></Label>
                <Label Content="Specifies all files with a .txt extension"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="*.txt;*.pdf" Width="80"></Label>
                <Label Content="Specifies all files with a .txt or a .pdf extension"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="*.* or empty" Width="80"></Label>
                <Label Content="All files"></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Window>